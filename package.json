{
  "name": "acho",
  "description": "The Hackable Log",
  "homepage": "https://acho.js.org",
  "version": "4.0.4",
  "main": "./lib/Acho.js",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/achojs/acho.git"
  },
  "bugs": {
    "url": "https://github.com/achojs/acho/issues"
  },
  "keywords": [
    "debug",
    "debugger",
    "hackable",
    "log",
    "logger",
    "logging",
    "simple",
    "tiny"
  ],
  "dependencies": {
